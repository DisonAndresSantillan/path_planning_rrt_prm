<launch>
<param name="use_sim_time" value="true"/>
  <!-- Arguments -->

 <arg name="open_rviz" default="true"/>
 <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
    <arg name="map_file" default="$(find path_planning_rrt_prm)maps/mapa.yaml"/>
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="map"/>
  </node>


  <!-- AMCL -->
  <include file="$(find path_planning_rrt_prm)/launch/amcl1.launch"/>
  <include file="$(find path_planning_rrt_prm)/launch/amcl2.launch"/>


  <!-- Move_base -->
  <include file="$(find path_planning_rrt_prm)/launch/move_base1.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>
  <include file="$(find path_planning_rrt_prm)/launch/move_base2.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>
  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find path_planning_rrt_prm)/rviz/Multi_turtlebot3_navigation.rviz"/>
  </group>
</launch>
